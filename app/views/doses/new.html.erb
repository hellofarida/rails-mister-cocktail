<h1>Add a dose for <%= @cocktail.name %></h1>
<%= simple_form_for [@cocktail, @dose] do |f| %>
  <%= f.association :ingredient %>
  <%= f.input :description %>
  <%= f.submit "Add a dose", class: "btn btn-primary w-100"%>
<% end %>
<hr>
<%= link_to "Back to #{@cocktail.name}", cocktail_path(@cocktail) %>
